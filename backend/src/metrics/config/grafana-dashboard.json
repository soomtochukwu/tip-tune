{
  "dashboard": {
    "title": "TipTune Application Metrics",
    "tags": ["tiptune", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (95th percentile)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{route}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_request_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "gridPos": { "x": 12, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "active_users_total"
          }
        ]
      },
      {
        "id": 5,
        "title": "Tips Per Second",
        "type": "graph",
        "gridPos": { "x": 18, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(tips_total[1m])",
            "legendFormat": "{{currency}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Query Duration",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{query_type}} - {{table}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Stellar Transaction Success Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(stellar_transactions_success_total[5m]) / (rate(stellar_transactions_success_total[5m]) + rate(stellar_transactions_failure_total[5m]))",
            "legendFormat": "Success Rate"
          }
        ]
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "app_memory_usage_bytes",
            "legendFormat": "{{type}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "app_cpu_usage_percent",
            "legendFormat": "CPU %"
          }
        ]
      },
      {
        "id": 10,
        "title": "Queue Length",
        "type": "graph",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "queue_length",
            "legendFormat": "{{queue_name}}"
          }
        ]
      },
      {
        "id": 11,
        "title": "Event Loop Lag",
        "type": "graph",
        "gridPos": { "x": 12, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "nodejs_eventloop_lag_seconds",
            "legendFormat": "Event Loop Lag"
          }
        ]
      }
    ]
  }
}
      },
      {
        "id": 9,
        "title": "CPU Usage",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 24, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "app_cpu_usage_percent"
          }
        ]
      },
      {
        "id": 10,
        "title": "Queue Length",
        "type": "graph",
        "gridPos": { "x": 18, "y": 24, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "queue_length",
            "legendFormat": "{{queue_name}}"
          }
        ]
      },
      {
        "id": 11,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "db_connection_pool_size",
            "legendFormat": "{{state}}"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
